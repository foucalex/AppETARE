<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:id="@+id/item_nom_etare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Nom" />

    <TextView
        android:id="@+id/item_commune_etare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Commune" />
    <TextView
        android:id="@+id/item_groupement_etare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Groupement" />

    <TextView
        android:id="@+id/item_date_creation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Date Creation" />

    <TextView
        android:id="@+id/item_date_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Date Update" />
    <TextView
        android:id="@+id/item_niveau_etare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Niveau ETARE" />
    <TextView
        android:id="@+id/item_statut_etare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Statut" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/item_btn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eye"
            android:background="#FFFFFF"
            android:layout_margin="7dp"
            android:onClick="ViewEtare"/>

        <ImageButton
            android:id="@+id/item_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="#FFFFFF"
            android:src="@drawable/edit"
            android:onClick="EditEtare"/>

        <ImageButton
            android:id="@+id/item_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trash"
            android:background="#FFFFFF"
            android:layout_margin="7dp"
            android:onClick="DeleteEtare"/>
    </LinearLayout>

</LinearLayout>