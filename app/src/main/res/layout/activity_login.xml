<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.LoginActivity">

    <TextView
        android:id="@+id/tv_connexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Connexion"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_identifiant"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_connexion"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_identifiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identifiant"
            android:layout_marginEnd="20dp"/>

        <EditText
            android:background="@drawable/edittext_border_color"
            android:id="@+id/et_identifiant"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="200sp"
            android:maxWidth="200sp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_mdp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_identifiant"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe"
            android:layout_marginEnd="20dp"/>


        <EditText
            android:id="@+id/et_mdp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/edittext_border_color"
            android:inputType="textPassword"
            android:minWidth="200sp"
            android:singleLine="true"
            android:textIsSelectable="false" />



    </LinearLayout>

    <Button
        android:id="@+id/btn_connexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se Connecter"
        android:layout_marginTop="60dp"
        android:layout_below="@id/layout_mdp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>